<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <div class="col-md-12">
        <h3 class="breadcrumb-header">Checkout</h3>
        <ul class="breadcrumb-tree">
          <li><a href="/">Home</a></li>
          <li class="active">Checkout</li>
        </ul>
      </div>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <div class="col-md-7">
        <!-- Billing Details -->
        <div class="billing-details">
          <div class="section-title">
            <h3 class="title">Billing address</h3>
          </div>
          <%= form_with(model: order, local: true) do |form| %>
            <% if order.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
                <ul>
                  <% order.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%=  form.label :name %><br>
              <%= form.text_field :name, size: 40, class: "input"%>
            </div>
            <div class="form-group">
              <%= form.label :email %><br>
              <%= form.text_field :email, size: 40, class: "input" %>
            </div>
            <div class="form-group">
              <%= form.label :address %><br>
              <%= form.text_area :address, rows: 2, cols: 40, class: "input" %>
            </div>
            <div class="form-group">
              <%= form.label :total %><br>
              <div class="order-total"><strong class="order-total"><%= number_to_currency(@cart.total_price) %></strong></div>
              <%# <%= form.text_field :total, required: true, class: 'order-total', value: number_to_currency(@cart.total_price) %> 
            </div>
            <div class="form-group">
              <%= form.label :pay_type %><br>
              <%= form.select :pay_type, Order.pay_types.keys,
                            prompt: 'Select a payment method' %>
            </div>
            <div class="primary-btn order-submit">
              <%= form.submit "Place Order", class:"primary-btn" %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Order Details -->
      <div class="col-md-5 order-details">
        <div class="section-title text-center">
          <h3 class="title">Your Order</h3>
        </div>
        <div class="order-summary">
          <div class="order-col">
            <div><strong>PRODUCT</strong></div>
            <div><strong>PRICE</strong></div>
          </div>
          <% @cart.line_items.each do |item| %>
            <div class="order-col">
              <div>
                <img width ="45" height ="40" src = "<%=item.product.img_1%>">
                <td><%= item.quantity %>&times;</td>
                <td><%= item.product.pro_name %></td>
              </div>
              <div class="price-product"><strong><%= number_to_currency(item.total_price) %></strong></div>
            </div>
          <% end %>
          <tr class="total_line">
            <div class="order-col">
              <div>Shiping</div>
              <div><strong>FREE</strong></div>
            </div>
            <div class="order-col">
              <div><strong>TOTAL</strong></div>
              <div><strong class="order-total"><%= number_to_currency(@cart.total_price) %></strong></div>
            </div>
          </tr>
        </div>
        <!-- /Order Details -->
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
  <!-- /SECTION -->
  
