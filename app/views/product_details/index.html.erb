<p id="notice"><%= notice %></p>

<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Screen</th>
      <th>Operating system</th>
      <th>Rear camera</th>
      <th>Front camera</th>
      <th>Network connection</th>
      <th>Cpu</th>
      <th>Ram</th>
      <th>Internal memory</th>
      <th>Memory stick</th>
      <th>Sim</th>
      <th>Battery capacity</th>
      <th>Hard drive</th>
      <th>Graphic card</th>
      <th>Connector</th>
      <th>Design</th>
      <th>Size</th>
      <th>Release time</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.screen %></td>
        <td><%= product_detail.operating_system %></td>
        <td><%= product_detail.rear_camera %></td>
        <td><%= product_detail.front_camera %></td>
        <td><%= product_detail.network_connection %></td>
        <td><%= product_detail.cpu %></td>
        <td><%= product_detail.ram %></td>
        <td><%= product_detail.internal_memory %></td>
        <td><%= product_detail.memory_stick %></td>
        <td><%= product_detail.sim %></td>
        <td><%= product_detail.battery_capacity %></td>
        <td><%= product_detail.hard_drive %></td>
        <td><%= product_detail.graphic_card %></td>
        <td><%= product_detail.connector %></td>
        <td><%= product_detail.design %></td>
        <td><%= product_detail.size %></td>
        <td><%= product_detail.release_time %></td>
        <td><%= product_detail.product_id %></td>
        <td><%= link_to 'Show', product_detail %></td>
        <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
        <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

