<!-- Cart -->
<div class="dropdown" id="viewcart" value = "<%=@cart.id%>" >
  <a href="" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" >
    <i class="fa fa-shopping-cart"></i>
    <span>Your Cart</span>
    <div class="qty"><%= cart.total_item_product %></div>
  </a>
  <div class="cart-dropdown">
    <div class="cart-list">
      <%= render(cart.line_items) %>
    </div>
    <div class="cart-summary">
      <small><%= cart.total_item_product %> Item(s) selected</small>
      <h5>SUBTOTAL: <%= number_to_currency(cart.total_price) %></h5>
    </div>
  </div>
</div>
<!-- /Cart -->
<script>
  $(document).ready(function(){
      $('#viewcart').click(function () {
        window.location.href='/carts/' + $(this).attr("value");
      }
  );
  })
</script>
