<div class="container">
  <h2 class="text-center">Your Cart</h2>
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Images</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.line_items.each do |item| %>
        <tr>
          <td>
            <img src="<%=item.product.img_1%>" alt="" width=70px height = 70px>
          </td>
          <td><%= item.product.pro_name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.product.price_output %></td>
          <td class="item_price"><%= number_to_currency(item.total_price) %></td>
          <td><button type="button" class="btn btn-danger"><%= link_to "", item, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-close"%></button></td>
        </tr>
      <%end%>
    </tbody>
    <thead class="thead-dark">
      <tr>
        <th>Total Price</th>
        <th></th>
        <th></th>
        <th></th>
        <th class="total_cell"><%= number_to_currency(@cart.total_price) %></th>
        <th><button type="button" class="btn btn-success"><a href="/orders/new">Checkout <i class="fa fa-arrow-circle-right"></i></a></button>
        </th>
      </tr>
      <tr>
        <button type="button" class="btn btn-warning"><%= link_to "Delete Cart", @cart, method: :delete, data: { confirm: 'Are you sure?' }%></button><small> <%= @cart.total_item_product %> Item(s)</small>
      </tr>
    </thead>
  </table>
</div>
