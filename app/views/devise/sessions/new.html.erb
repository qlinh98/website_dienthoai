
<div class="container">
  <div class="row">
    <h1 class="title1">Login</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div class="text-center">
          <%= f.submit "Login", class: "btn btn-info col-lg-12" %>
        </div>
        <div class="text-center">
          <%= render "devise/shared/links"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

  
