<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <% if "#{OmniAuth::Utils.camelize(provider)}" == "Facebook"%>
     <%= link_to  "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-block facebook-button button1" %>
     <% else %>
     <%= button_to "Sign in with Google", omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-block button2 google-button"%>
     <% end %>
  <% end %>
<% end %>