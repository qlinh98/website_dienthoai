
<div class="container">
  <div class="row">
    <h1 class="title1">Forgot your password?</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit "Send me reset password instructions", class: "btn btn-info col-lg-12" %>
        </div>
        <br/>
        </br>
        <div class="text-center">
          <%= render "devise/shared/links"%>
        </div
      <% end %>
    </div>
  </div>
</div>
